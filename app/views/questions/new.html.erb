<h1>New Question</h1>

<%= form_for :question, url: questions_path do |f| %>
  <p>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description, "Description" %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Ask Question" %>
  </p>
<% end %>
